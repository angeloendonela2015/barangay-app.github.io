<%= form_with(model: barangay) do |form| %>
  <div class="container">
  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1"><%= image_tag('user.svg') %></span>
    <%= form.text_field :fullname, class:"form-control text-capitalize", placeholder:"Name of person" %>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1"><%= image_tag('phone.svg') %></span>
    <%= form.text_field :number, class:"form-control", placeholder:"Phone Number" %>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1"><%= image_tag('map-pin.svg') %></span>
    <%= form.text_field :address, class:"form-control text-capitalize", placeholder:"Address" %>
  </div>

  <div class="row">
    <div class="row-12">
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Gender:</label>
        <br />
        <label class="form-check-label" for="inlineRadio1"></label>
        <div class="form-check form-check-inline">
          <%= form.number_field :gender, class:"form-check-input", id:"gender", type:"radio", value:"Male" %>
          <label class="form-check-label" for="inlineRadio1">Male</label>
        </div>
        <div class="form-check form-check-inline">
          <%= form.number_field :gender, class:"form-check-input", id:"gender", type:"radio", value:"Female" %>
          <label class="form-check-label" for="inlineRadio2">Female</label>
        </div>
      </div>
    </div>
    <div class="row-6">
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Status:</label>
        <br />
        <label class="form-check-label" for="inlineRadio1"></label>
        <div class="form-check form-check-inline">
          <%= form.number_field :status, class:"form-check-input", id:"gender", type:"radio", value:"1" %>
          <label class="form-check-label" for="inlineRadio1">Yes</label>
        </div>
        <div class="form-check form-check-inline">
          <%= form.number_field :status, class:"form-check-input", id:"gender", type:"radio", value:"0" %>
          <label class="form-check-label" for="inlineRadio2">No</label>
        </div>
      </div>
    </div>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <% if barangay.errors.any? %>
    <div id="myModal" class="modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <small class="modal-title text-capitalize text-danger">
              <%= image_tag 'x-octagon.svg' %>
              <%= pluralize(barangay.errors.count, "error") %> prohibited this barangay from being saved:
            </small>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="OK"></button>
          </div>
          <div class="modal-body">
            <div style="color: red">
              <ul class="list-group p-3">
                <% barangay.errors.each do |error| %>
                  <li class="list-group-item">
                    <%= image_tag 'alert-circle.svg', style:"margin-right:1rem;margin-left:5rem;" %>
                    <small style="margin-left:1charem;"><%= error.full_message %></small>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= form.submit 'Add new barangay', class:"btn btn-sm shadow-sm", style:'background-color:red;color:#ffffff;' %>
  <% else %>
    <%= form.submit 'Add new barangay', class:"btn btn-sm shadow-sm", style:'background-color:#6f42c1;color:#ffffff;' %>
  <% end %>
  </div>
</div>
<% end %>

