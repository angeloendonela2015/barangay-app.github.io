<div class="container-sm mt-4 shadow rounded-2" style="background-color:#51308d; color:#ffffff; height:39rem">
  <div class="container p-5">        
    <img src="/assets/barangay-low-resolution-logo-white-on-transparent-background.png" style="position: relative; top: 50%; transform: translateY(0%);" class="mx-auto d-block rounded-circle" width='25%'>
    <h3 class="card-title text-center mt-3">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3 mx-auto" style="max-width:25rem;">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
      
      <div class="actions">
        <div class="d-grid gap-2 mx-auto mt-3" style="max-width:25rem;">
          <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-sm" %>
        </div>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
